{
  "name": "kimono",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "dev:server": "turbo dev --filter @edu/server",
    "db:generate": "turbo db:generate --filter @edu/server",
    "db:migrate": "turbo db:migrate --filter @edu/server",
    "db:studio": "turbo db:studio --filter @edu/server",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
